---
interface Props {
  title: string;
  description: string;
  date: Date;
  slug: string;
}

const { description, title, date, slug } = Astro.props;
const formattedDate = date.toLocaleDateString("en-US", {
  day: "numeric",
  month: "long",
  year: "numeric",
});
---

<li class="[&:not(:last-child)]:border-b">
  <article class="px-2 py-4 space-y-3 hover:scale-[1.01] transition-all">
    <a href={`/posts/${slug}`}>
      <header
        class="flex flex-col sm:flex-row items-start sm:items-center justify-between"
      >
        <h2
          transition:name={`post-title-${title}`}
          class="text-2xl truncate font-bold tracking-tight"
        >
          {title}
        </h2>
        <time class="text-sm" transition:name={`post-date-${title}`}
          >{formattedDate}</time
        >
      </header>
      <p class="text-zinc-500 mt-4 leading-5 line-clamp-2">{description}</p>
    </a>
  </article>
</li>
