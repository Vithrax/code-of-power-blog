---
import { ViewTransitions } from 'astro:transitions';
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';

interface Props {
  title: string;
}

const { title } = Astro.props;
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta
      name="description"
      content="Minimal blog by Adrian Gajdulewicz, everything and nothing"
    />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="generator" content={Astro.generator} />
    <title>{title}</title>
    <ViewTransitions />
  </head>
  <body
    class="antialiased min-h-full font-sans px-2 sm:px-0 bg-white dark:bg-black text-black dark:text-white"
  >
    <Header />
    <main class="max-w-xl mx-auto pt-24">
      <slot />
    </main>
    <Footer />
  </body>
</html>
